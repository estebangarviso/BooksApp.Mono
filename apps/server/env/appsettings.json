{
	"$schema": "../node_modules/@v10e/env/schemas/env.schema.json",
	"|DEFAULT|": {
		"APP_ENV": "[[ENV]]",
		"APP_NAME": "[[NAME]]",
		"APP_VERSION": "[[VERSION]]",
		"TZ": "America/Santiago",
		"LANG": "es-CL.UTF-8",
		"SUPPORTED_LANGS": "es",
		"SWAGGER_UI": true,
		"BASE_URL": "api/",
		"LOG_LEVEL": "info",
		"REQUEST": {
			"TIMEOUT": 30000,
			"MAX_JSON_BODY_SIZE": "8mb"
		},
		"SECURITY": {
			"ENABLED": false,
			"HEADER_NAME": "x-api-key",
			"BCRYPT": {
				"SALT_ROUNDS": 10
			},
			"JWT": {
				"ACCESS_TOKEN_EXPIRES_IN": "1d",
				"REFRESH_TOKEN_EXPIRES_IN": "30d",
				"ALGORITHM": "HS256"
			}
		},
		"DB": {
			"TYPE": "postgres",
			"HOST": "localhost",
			"PORT": 5432,
			"SYNCHRONIZE": false,
			"RUN_MIGRATIONS": false,
			"LOGGING": false,
			"CACHE": false,
			"TIMEOUT": 20000
		}
	},
	"|MODE|": {
		"build": {
			"NODE_ENV": "production",
			"PORT": 8080
		},
		"debug": {
			"NODE_ENV": "development",
			"PORT": 4004,
			"BASE_URL": "api",
			"LOG_LEVEL": "debug",
			"SECURITY": {
				"API_KEY": "debug",
				"JWT": {
					"ACCESS_TOKEN_SECRET": "debug",
					"REFRESH_TOKEN_SECRET": "debug"
				}
			}
		},
		"test": {
			"NODE_ENV": "test"
		}
	},
	"|ENV|": {
		"dev": {},
		"prod": {}
	},
	"|LOCAL|": {
		"dev": {},
		"prod": {}
	}
}
